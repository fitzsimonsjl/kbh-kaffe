
<div class="container mt-4">
  <div class="row">
    <% @cafes.each do |cafe| %>
      <div class="col-4 d-flex">
        <%= link_to cafe_path(cafe), class: "card-link" do  %>
          <div class="card h-90" style="width: 18rem;">

            <%= image_tag "cafe-photos/#{cafe.logo_url}", class: "card-img-top" %>
            <div class="card-body">
              <h5 class="card-title"> <%= cafe.name %> </h5>
              <h6 class="card-subtitle mb-2 text-muted"> <%= cafe.address %></h6>
              <div class="d-flex">
                <p class="card-text mr-3"> <%= cafe.affordability %> </p>
                <p class="card-text"> <%= cafe.rating %></p>
                <div class= card-favourite>
                  <i onclick="liked(this)" class="far fa-heart"></i>
                  </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

    <% end %>
  </div>
</div>


<script>
function liked(x) {
  x.classList.toggle("fas-fa-heart");
}
</script>
