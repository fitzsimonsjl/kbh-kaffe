
<div class="show-container mt-5">

  <div class="banner-container">
  <div class="show-banner mb-3"></div>
  </div>

    <div class="cafe-title mb-3" style="justify-content: center;">
     <h2> <%= @cafe.name %></h2>
    </div>

      <div class=" d-flex row">
      <div class="info-container">
         <div class= "d-flex col-6 mt-3">
           <div class="cafe-attributes">
             <h4> Price: <%= @cafe.affordability %></h4>
             <h4> Category:</h4>
             <h4> Address: <%= @cafe.address %></h4>
             <h4> Rating: <%= @cafe.rating %></h4>
           </div>
         </div>
         </div>
         <div class= "d-flex col-6 mt-3">
          <div class="cafe-opening-times">
            <h5> Opening Times </h5>
            <h5> Monday - 0700 til 2200 </h5>
            <h5> Tuesday - 0730 til 2200  </h5>
            <h5> Wednesday - 0730 til 2200 </h5>
            <h5> Thursday - 0730 til 2200 </h5>
            <h5> Friday - 0800 til 00 </h5>
            <h5> Saturday - 0800 til 00 </h5>
            <h5> Sunday - 0730 til 2200 </h5>
          </div>
         </div>

      <div
    id="map"
    style="width: 300px;
    height: 300px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>

    </div>

      </div>




